{% for door_sensor in door_sensors %}
    auto door_{{ door_sensor.name }}_sub = create_subscription<std_msgs::msg::Bool>(
        "/{{ door_sensor.topic_name }}", 10,
        [this](const std_msgs::msg::Bool::SharedPtr msg) { Door{{ door_sensor.name }}Callback(msg); });
{% endfor %}

{% for camera in cameras %}
  pose_sub_{{ camera.name }} = create_subscription<zed_interfaces::msg::ObjectsStamped>(
  "/{{ camera.topic_name }}", 1,
  [this](const zed_interfaces::msg::ObjectsStamped::SharedPtr msg) { PosePixCallback_{{ camera.name }}(msg); });
{% endfor %}